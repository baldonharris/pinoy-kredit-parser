{
  "name": "pinoy-kredit-parser",
  "version": "1.2.1",
  "description": "Philippine credit card statement parser",
  "main": "./dist/node.js",
  "browser": "./dist/browser.js",
  "types": "./dist/node.d.ts",
  "exports": {
    ".": {
      "node": {
        "types": "./dist/node.d.ts",
        "import": "./dist/node.js",
        "require": "./dist/node.js"
      },
      "browser": {
        "types": "./dist/browser.d.ts",
        "import": "./dist/browser.js"
      },
      "default": "./dist/browser.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/baldonharris/pinoy-kredit-parser.git"
  },
  "bugs": {
    "url": "https://github.com/baldonharris/pinoy-kredit-parser/issues"
  },
  "homepage": "https://github.com/baldonharris/pinoy-kredit-parser#readme",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "philippines",
    "credit-card",
    "statement",
    "parser",
    "finance"
  ],
  "license": "MIT",
  "dependencies": {
    "@napi-rs/canvas": "^0.1.95",
    "pdf-parse": "^2.4.5"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}

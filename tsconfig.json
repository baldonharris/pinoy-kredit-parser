{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./src",
    "sourceMap": true,
    "lib": ["ES2022", "DOM"],
    "module": "commonjs",
    "target": "ES2022",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": "."
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/__tests__/*"]
}